---
pagination:
  data: collections.categories
  size: 1
  alias: category
permalink: "/categories/{{ category | slug }}/index.html"
layout: main
eleventyComputed:
  title: "Categor√≠a: {{ category }}" 
---


<section>
  <h2>Categor&iacute;a:
    {{ category }}</h2>

  {% assign posts = collections.post | filterByCategory: category %}
  {% for post in posts reversed %}
    <article>
      <p>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        -
        {{ post.date | niceDate }}
        {% excerpt post %}
      </p>
    </article>
  {% endfor %}
</section>